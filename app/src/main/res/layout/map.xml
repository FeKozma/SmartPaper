<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <org.osmdroid.views.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <View
                android:layout_width="199dp"
                android:layout_height="52dp"
                android:layout_alignEnd="@+id/title"
                android:layout_alignBottom="@+id/title"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="-15dp"

                android:layout_marginBottom="-15dp"
                android:background="@drawable/box_right_bottom_corner_black"
                />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#e3e3e3"
                android:layout_margin="8dp"
                android:text="Select a location"
                />

            <View
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/mapView"
                android:layout_alignTop="@+id/posiviveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_24dp"
                android:background="@drawable/box_left_top_corner_black"
                android:layout_marginStart="-15dp"
                android:layout_marginTop="-15dp"
                android:layout_alignStart="@+id/close"
                android:id="@+id/posiviveButtonBackground"
                android:visibility="gone"


                />
            <ImageView
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/mapView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"
                android:id="@+id/posiviveButton"
                android:visibility="gone"

                />

            <View
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_24dp"
                android:background="@drawable/box_left_bottom_corner_black"
                android:layout_marginBottom="-15dp"
                android:layout_marginStart="-15dp"
                android:layout_alignStart="@+id/close"

                />
            <ImageView
                android:id="@+id/close"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/title"
                android:layout_alignBottom="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_24dp"
                android:layout_marginHorizontal="13dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>