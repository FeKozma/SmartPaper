<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/tag_list_item_background"
        app:cardCornerRadius="50dp"
        android:layout_margin="5dp"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <RelativeLayout
            android:layout_marginHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tag_list_item_add"
                android:visibility="gone"
                android:layout_alignTop="@+id/tag_list_item_layout_tool"
                android:layout_alignBottom="@+id/tag_list_item_layout_tool"
                android:layout_gravity="center"
                android:src="@drawable/edit_24dp"
                android:layout_width="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_height="0dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/tag_list_item_layout_tool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tag_list_item_rel_lay"
            android:layout_above="@+id/tag_list_item_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tag_list_item_text"
                android:paddingRight="10dp"
                android:paddingVertical="10dp"
                android:layout_toRightOf="@+id/tag_list_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="testtest"/>

            <ImageView
                android:id="@+id/tag_list_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingLeft="3dp"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/tag_list_item_text"
                android:layout_alignBottom="@+id/tag_list_item_text"
                android:src="@drawable/tag_24dp"
                app:tint="@color/white"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>