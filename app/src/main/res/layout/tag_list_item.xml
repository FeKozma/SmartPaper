<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/tag_list_item_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        app:cardCornerRadius="50dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp">

            <ImageView
                android:id="@+id/tag_list_item_add"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignTop="@+id/tag_list_item_layout_tool"
                android:layout_alignBottom="@+id/tag_list_item_layout_tool"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:src="@drawable/edit_24dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tag_list_item_layout_tool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=" " />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tag_list_item_rel_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tag_list_item_background">

            <TextView
                android:id="@+id/tag_list_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tag_list_item_icon"
                android:paddingVertical="10dp"
                android:paddingRight="10dp"
                android:text="testtest"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/tag_list_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignTop="@+id/tag_list_item_text"
                android:layout_alignBottom="@+id/tag_list_item_text"
                android:layout_centerVertical="true"
                android:paddingLeft="3dp"
                android:src="@drawable/tag_24dp"
                app:tint="@color/white" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>