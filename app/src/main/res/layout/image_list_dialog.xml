<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/root_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_item_dialog_image"
            android:scaleType="centerCrop"
            android:adjustViewBounds="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/image_item_dialog_padding"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@+id/image_item_dialog_list"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/image_item_dialog_padding"
            android:background="@drawable/black_to_transparent"
            />
        <ImageView
            android:id="@+id/next"
            android:src="@drawable/keyboard_arrow_right_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/image_item_dialog_list"
            android:layout_marginHorizontal="13dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <ImageView
            android:id="@+id/previous"
            android:src="@drawable/keyboard_arrow_right_24dp"
            android:rotation="180"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/image_item_dialog_list"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/image_item_dialog_list"
android:layout_margin="20dp"
            android:paddingBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Close Button -->
        <View
            android:layout_alignParentRight="true"
            android:id="@+id/close_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_24dp"
            android:background="@drawable/box_left_bottom_corner_black"
            android:layout_marginBottom="-15dp"
            android:layout_marginStart="-15dp"
            android:layout_alignStart="@+id/close"
            android:layout_alignBottom="@+id/close"
            />
        <ImageView
            android:layout_marginTop="13dp"
            android:id="@+id/close"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_24dp"
            android:layout_marginHorizontal="13dp"
            />

        <!-- Menu -->

        <View
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/close_background"
            android:layout_alignEnd="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_right_bottom_corner_black"
            android:layout_marginEnd="-15dp"
            android:id="@+id/menu_background"
            />
        <ImageView
            android:layout_alignBottom="@+id/close"
            android:layout_alignTop="@+id/close"

            android:id="@+id/menu"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_24dp"
            android:layout_marginHorizontal="13dp"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>